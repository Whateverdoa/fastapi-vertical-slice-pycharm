# FastAPI Application Settings
APP_NAME=FastAPI Vertical Slice
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=debug
SECRET_KEY=your-super-secret-key-change-in-production

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database Configuration (PyCharm Local Development)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fastapi_app
DATABASE_ECHO=false  # Set to true for SQL query logging

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Authentication
JWT_SECRET_KEY=jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "PATCH"]
ALLOWED_HEADERS=["*"]

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=your-email@gmail.com

# Celery Configuration (Background Tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Monitoring and Observability
SENTRY_DSN=
PROMETHEUS_ENABLED=false

# Development Tools
PYTEST_CURRENT_TEST=  # Used by pytest
COVERAGE_PROCESS_START=  # Used by coverage

# PyCharm Specific
PYTHONPATH=src
PYTHONUNBUFFERED=1

# Optional: Feature Flags
FEATURE_USER_REGISTRATION=true
FEATURE_EMAIL_VERIFICATION=false
FEATURE_RATE_LIMITING=true

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=uploads/

# Pagination Defaults
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100 